<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="NavigationViewStyle" parent="AppTheme">
        <item name="android:textSize">18sp</item> <!-- menu item text size-->
        <item name="listPreferredItemHeightSmall">40dp</item> <!-- menu item height-->
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <!-- Estilo do header da tabela (2ªf, 3ªf, 4ªf, etc...) -->
    <style name="tabelaGreySemana" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo do header da tabela (dia 1, dia 2, dia 30, etc...) -->
    <style name="tabelaGreyDia" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Estilo da primeira linha da tabela (depois do header, azul claro) -->
    <style name="tabelaLightBlueCenter" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/cell_center_light</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginEnd">0.5dp</item>
        <item name="android:layout_marginStart">0.5dp</item>
    </style>

    <!-- Estilo da segunda linha da tabela (depois do header, azul escuro) -->
    <style name="tabelaDarkBlueCenter" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/cell_center_dark</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginEnd">0.5dp</item>
        <item name="android:layout_marginStart">0.5dp</item>
    </style>

    <!-- Estilo da ultima linha da tabela -->
    <style name="tabelaLightBlueBottom" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginEnd">0.5dp</item>
        <item name="android:layout_marginStart">0.5dp</item>
    </style>

    <!-- Estilo do linear layout do header da tabela -->
    <style name="linLayout" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_marginStart">1dp</item>
    </style>

    <!-- Estilo dos cartoes a usar no recyclerview -->
    <style name="cardviews" parent="AppTheme">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#46bdbf</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="spinner" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#000</item>
        <item name="colorControlActivated">#000</item>
    </style>


</resources>