<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_nome_foto"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Name \n sobrenome"
        android:drawableTop="@drawable/usericon"
        android:drawablePadding="10dp"
        android:drawableTint="@color/dark"/>

    <ImageView
        android:id="@+id/im_barra_vertical"
        android:layout_toRightOf="@+id/tv_nome_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_layout_textos"
        android:padding="10dp"
        android:layout_toRightOf="@id/im_barra_vertical"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content"
            android:text="Turno da Manha"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="TerÃ§a Feira dia xyz yada yada"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferencias: noite, dia"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_pendente"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/ll_layout_textos"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/cardBlue"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Pendente"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>